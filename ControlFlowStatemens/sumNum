
public class Exercise {

    public static void main(String[] args) {
        int num = 0;
        int count = 0;
       

        for(int i=1; i<=1000; i++) {
            if (i % 3 == 0 && i % 5 == 0) {
                num=num+i;
                count++;
                if (count==5) {
                    System.out.println("final sum is:" +num);
                    break;
                }

            }

        }

        System.out.println("final sum2 is:" +num);

    }

   }
